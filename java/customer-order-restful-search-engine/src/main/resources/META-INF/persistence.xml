<!-- This file is for can using build-in Persistence plug-in in Intellij -->

<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="myPresistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <!--<property name="hibernate.show_sql" value="true"/>-->
            <property name="hibernate.connection.username" value="twistezo"/>
            <property name="hibernate.connection.password" value="twistezo"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost/softhis_db?verifyServerCertificate=false&amp;useSSL=true"/>
            <!--<property name="hibernate.max_fetch_depth" value="3"/>-->
            <!--<property name = "hibernate.hbm2ddl.auto" value = "update" />-->
        </properties>
    </persistence-unit>
</persistence>
